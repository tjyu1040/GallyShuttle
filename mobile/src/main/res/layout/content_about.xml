<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.AboutActivity"
    tools:showIn="@layout/activity_about">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ImageView
            android:id="@+id/logo_image_view"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="@string/logo_description"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher"/>

        <TextView
            android:id="@+id/version_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/about_view_padding"/>

        <TextView
            android:id="@+id/copyright_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/about_view_padding"
            android:text="@string/copyright"/>

        <Button
            android:id="@+id/credits_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="@dimen/about_view_padding"
            android:text="@string/underlined_credits"/>

        <Button
            android:id="@+id/rate_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="@dimen/about_view_padding"
            android:text="@string/underlined_rate_application"/>

        <Button
            android:id="@+id/support_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="@dimen/about_view_padding"
            android:text="@string/underlined_support"/>

        <android.support.percent.PercentFrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="8dp">

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/blue"
                app:layout_heightPercent="5%"
                app:layout_widthPercent="75%"/>

        </android.support.percent.PercentFrameLayout>

        <TextView
            android:id="@+id/message_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/about_view_padding"
            android:text="@string/about_message"/>

        <Button
            android:id="@+id/open_source_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="@dimen/about_view_padding"
            android:text="@string/underlined_open_source_licenses"/>

        <Button
            android:id="@+id/tos_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="@dimen/about_view_padding"
            android:text="@string/underlined_terms_of_service"/>

        <Button
            android:id="@+id/privacy_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="@dimen/about_view_padding"
            android:text="@string/underlined_privacy_policy"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
