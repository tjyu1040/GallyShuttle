<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.ephemeraldreams.gallaudetshuttle.ui.MainFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textColor="@color/material_blue_grey_950"
        android:text="@string/intro_message"/>

    <Button
        android:id="@+id/continuousButton"
        android:layout_width="@dimen/button_width_length"
        android:layout_height="wrap_content"
        android:padding="@dimen/main_fragment_button_padding"
        android:text="@string/continuous_schedule"/>

    <Button
        android:id="@+id/lateNightButton"
        android:layout_width="@dimen/button_width_length"
        android:layout_height="wrap_content"
        android:padding="@dimen/main_fragment_button_padding"
        android:text="@string/late_night_schedule"/>

    <Button
        android:id="@+id/weekendButton"
        android:layout_width="@dimen/button_width_length"
        android:layout_height="wrap_content"
        android:padding="@dimen/main_fragment_button_padding"
        android:text="@string/weekend_schedule"/>

    <Button
        android:id="@+id/modifiedButton"
        android:layout_width="@dimen/button_width_length"
        android:layout_height="wrap_content"
        android:padding="@dimen/main_fragment_button_padding"
        android:text="@string/modified_schedule"/>

</LinearLayout>