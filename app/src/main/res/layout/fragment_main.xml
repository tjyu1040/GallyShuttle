<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.ephemeraldreams.gallaudetshuttle.ui.MainFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textColor="@color/material_blue_grey_950"
        android:text="@string/intro_message"/>

    <Button
        android:id="@+id/continuous_button"
        android:layout_width="@dimen/button_width_length"
        android:layout_height="wrap_content"
        android:padding="@dimen/main_fragment_button_padding"
        android:text="@string/schedule_title_continuous"/>

    <Button
        android:id="@+id/alt_continuous_button"
        android:layout_width="@dimen/button_width_length"
        android:layout_height="wrap_content"
        android:padding="@dimen/main_fragment_button_padding"
        android:text="@string/schedule_title_alt_continuous"/>

    <Button
        android:id="@+id/late_night_button"
        android:layout_width="@dimen/button_width_length"
        android:layout_height="wrap_content"
        android:padding="@dimen/main_fragment_button_padding"
        android:text="@string/schedule_title_late_night"/>

    <Button
        android:id="@+id/weekend_button"
        android:layout_width="@dimen/button_width_length"
        android:layout_height="wrap_content"
        android:padding="@dimen/main_fragment_button_padding"
        android:text="@string/schedule_title_weekend"/>

    <Button
        android:id="@+id/modified_button"
        android:layout_width="@dimen/button_width_length"
        android:layout_height="wrap_content"
        android:padding="@dimen/main_fragment_button_padding"
        android:text="@string/schedule_title_modified"/>

</LinearLayout>
