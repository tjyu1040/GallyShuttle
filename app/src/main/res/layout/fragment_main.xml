<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.ephemeraldreams.gallaudetshuttle.ui.MainFragment">

    <TextView
        android:id="@+id/current_schedule_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/fragment_main_element_padding"
        android:textSize="25sp"
        android:typeface="serif"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:text="@string/placeholder_current_schedule"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:text="@string/remaining_time_message"/>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/buff">

        <TextView
            android:id="@+id/timer_countdown_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/timer_countdown_text_size"
            android:textColor="@color/blue"
            android:typeface="serif"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:text="@string/placeholder_timer_countdown"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/arrival_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/fragment_main_element_padding"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:text="@string/until_arrival_time_message"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fragment_main_element_padding"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:text="@string/spinner_select_station_message"/>

        <Spinner
            android:id="@+id/station_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <CheckBox
        android:id="@+id/notifications_enabled_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkbox_notification_enabled_message"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/fragment_main_element_padding"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="@string/real_time_tracking_note"/>

    </RelativeLayout>

</LinearLayout>
